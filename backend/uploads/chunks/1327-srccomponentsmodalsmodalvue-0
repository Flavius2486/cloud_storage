<template>
  <div class="modal">
    <div class="modal-header">
      <p class="modal-title">{{ title }}</p>
      <div class="close-modal-btn" @click="hideModal()">
        <fa :icon="['fas', 'xmark']" />
      </div>
    </div>
    <div class="modal-body">
      <slot></slot>
    </div>
  </div>
  <div class="overlay" @click="hideModal()"></div>
</template>

<script>
export default {
  name: "common-modal",
  props: {
    title: {
      type: String,
      default: "______",
    },
  },
  methods: {
    hideModal() {
      document.querySelector(".modal").classList.add("hidden");
      document.querySelector(".overlay").classList.add("hidden");
    },
  },
};
</script>

<style scoped>
.overlay {
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  position: absolute;
  z-index: 4;
  background-color: black;
  opacity: 0.2;
  filter: blur(10px);
}

.modal {
  padding: 10px;
  border-radius: 10px;
  background-color: #ffffff;
  position: absolute;
  z-index: 50;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  color: #23232f;
  font-size: 19px;
  padding-bottom: 10px;
}

.close-modal-btn {
  margin-left: 40px;
}

.hidden {
  display: none;
}
</style>
